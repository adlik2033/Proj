<Window x:Class="Проект.auth.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Проект.auth"
        mc:Ignorable="d"
           Title="Вход" Height="150" Width="200" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Войдите" TextAlignment="Center" Grid.Row="0" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <TextBlock Text="Ваш логин" TextAlignment="Center" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <TextBox Name="Login"  Grid.Row="2"/>
        <TextBlock Text="Ваш пароль" TextAlignment="Center" Grid.Row="3" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <PasswordBox Name="Password"  Grid.Row="4"/>
        <Button Content="Войти" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
